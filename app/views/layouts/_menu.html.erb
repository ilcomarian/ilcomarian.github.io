<div class="ui red fixed pointing menu" id="menu">
    <a class="item" href="/show/index">
        <div class=" ui inverted red button"> <i class="home icon "></i> home</div>
    </a>
    <div class='search'>
        <form action="/search" method="post" class="fadeIn ">
            <div class="ui  icon input round1">
                <input name="query" type="text" placeholder="Search..." class='round1'>
                <i class="search icon"></i>
            </div>
        </form>

    </div>
    <%if user_signed_in?%>
    <div class="item">
        <%= link_to '<i class="sign out icon"></i>Log out'.html_safe, destroy_user_session_path, method: :delete, :class => "ui inverted red button" %>
    </div>
      
    <div class="item">
        <%= link_to '<i class="sign in icon"></i>Profile'.html_safe, profile_index_path, :class => "ui inverted red button " %>
    </div>
    <%else%>
    <div class="item">
        <%= link_to '<i class="signup icon"></i>Sign up'.html_safe, new_user_registration_path, :class => "ui inverted red button" %>

    </div>
    <div class="item">
        <%= link_to '<i class="sign in icon"></i>Sign in'.html_safe, user_session_path, :class => "ui inverted red button " %>
    </div>
    <%end%>
</div>