<%=(render 'layouts/menu') %>


   <% if flash_message_set? -%>
 
<div class="ui positive message" style = "margin-top:100px;">
  <i class="close icon"></i>
   
     <%= render_flash_messages %>
 
</div>
<%end%>
<%if $video_url != nil%>
<div class="container1 fadeIn">
  <% $video_url.each_with_index  do |status,index| %>
  <div class='ui card' style="width:28%; margin:2%;box-shadow: 0 0 11px black;">
    <div class="video-responsive">
      <iframe allowfullscreen width="420" height="315" src="<%=status%>">
      </iframe>
    </div>
    <div class='content'>

      <div class='extra content'>
          <a class='ui red button inverted' href="<%=mp4_path(url_param: $file[index])%>"  >mp4</a> 
          <a class='ui red button inverted' href="<%=mp3_path(url_param: $file[index])%>" >mp3</a>
          <%if user_signed_in?%>
          <a class='ui red button inverted' href="<%= create_path(url_param: $file[index],url: status)%>" >add</a> 
        <%end%>
      </div>
    </div>
  </div>
  <% end %>

</div>
<%end%>